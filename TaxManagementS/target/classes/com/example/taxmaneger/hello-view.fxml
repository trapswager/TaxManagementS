<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.taxmanager.HelloController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">
    <Label text="Tax Manager System" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Taxpayer Name:"/>
        <TextField fx:id="nameField" promptText="Enter taxpayer name"/>

        <Label text="Income Amount:" GridPane.rowIndex="1"/>
        <TextField fx:id="incomeField" promptText="Enter income amount" GridPane.rowIndex="1"/>

        <Label text="Tax Rate (%):" GridPane.rowIndex="2"/>
        <TextField fx:id="rateField" promptText="Enter tax rate" GridPane.rowIndex="2"/>
    </GridPane>
    <Button text="Calculate Tax" fx:id="calculateButton" onAction="#onCalculateTax"/>
    <Label fx:id="resultLabel" text="Result will appear here" style="-fx-text-fill: green;"/>
</VBox>
